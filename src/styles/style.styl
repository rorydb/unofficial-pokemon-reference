@import normalize

pokedexBackground = #606060
infoBackground = #f8f8f8
solidBorder = 2px solid black

.clearfix:after
     visibility: hidden
     display: block
     font-size: 0
     content: " "
     clear: both
     height: 0

@font-face
    font-family: 'pokemon_gbregular'
    src: url('../fonts/pokemon_gb-webfont.woff2') format('woff2'),
            url('../fonts/pokemon_gb-webfont.woff') format('woff')
    font-weight: normal
    font-style: normal

body
    font-size: 0.8em
    font-family: pokemon_gbregular

.pokeball
    position: relative
    cursor: pointer
    z-index: 10
    height: 100vh
    width: 100vw
        
    .top 
        position: relative
        height: 50%
        width: 100%
        background-color: #ff0000
        border-bottom: 20px solid black
        transform: translate3d(0,0,0)
        transition: transform .4s ease-in

    .bottom
        position: relative
        height: 50%
        width: 100%
        border-top: 20px solid black
        transform: translate3d(0,0,0)
        transition: transform .4s ease-in

    .circle
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        height: 75px
        width: 75px
        opacity: 1
        background: #fff
        border: 10px solid black
        border-radius: 40px        
        transition: opacity .4s ease-in

        small
            display: none
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            font-size: 0.6em;
            color: #7f7f7f
            animation-name: pulse
            animation-duration: 1.5s
            animation-iteration-count: infinite
            animation-timing-function: ease
        
    &.moving .top
        transform: translate3d(0, -100%, 0)

    &.moving .bottom
        transform: translate3d(0, 100%, 0)

    &.moving .circle
        opacity: 0

.pokedex
    background-color: pokedexBackground
    max-width: 60em
    margin: 0 auto
    border: solidBorder

    .pokemon-list
        max-height: 50vh
        list-style-type: none
        padding: 0.25em
        background: infoBackground
        border: solidBorder
        overflow: scroll

        span
            display: block

        .name
            display: block
            text-align: right;

    .pokemon-info
        background: infoBackground
        border: solidBorder

@keyframes pulse {
    0%      { opacity: 0 }
    50%     { opacity: 1 }
    100%    { opacity: 0 }
}