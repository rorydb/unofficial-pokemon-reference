@import normalize
@import grid12

pokedexBackground = #606060
infoBackground = #f8f8f8
solidBorder = 2px solid black

@font-face
    font-family: 'pokemon_gbregular'
    src: url('../fonts/pokemon_gb-webfont.woff2') format('woff2'),
            url('../fonts/pokemon_gb-webfont.woff') format('woff')
    font-weight: normal
    font-style: normal

body
    font-size: 0.8em
    font-family: pokemon_gbregular

figure
    margin: 0
    padding: 0

.pokeball
    position: absolute
    top: 0
    left: 0
    cursor: pointer
    z-index: 10
    height: 100vh
    width: 100vw
        
    .top 
        position: relative
        height: 50%
        width: 100%
        background-color: #ff0000
        border-bottom: 20px solid black
        transform: translate3d(0,0,0)
        transition: transform .4s ease-in

    .bottom
        position: relative
        height: 50%
        width: 100%
        background-color: #ffffff
        border-top: 20px solid black
        transform: translate3d(0,0,0)
        transition: transform .4s ease-in

    .circle
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        height: 75px
        width: 75px
        opacity: 1
        background: #fff
        border: 10px solid black
        border-radius: 40px        
        transition: opacity .4s ease-in

        small
            display: none
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
            font-size: 0.6em;
            color: #7f7f7f
            animation-name: pulse
            animation-duration: 1.5s
            animation-iteration-count: infinite
            animation-timing-function: ease
        
    &.moving .top
        transform: translate3d(0, -100%, 0)

    &.moving .bottom
        transform: translate3d(0, 100%, 0)

    &.moving .circle
        opacity: 0

.pokedex
    background-color: pokedexBackground

    margin: 0 auto
    border: solidBorder
    position: absolute
    top: 50%
    left: 50%
    transform: translate3d(-50%,-50%,0)

    .pokemon-list
        height: 50vh
        list-style-type: none
        padding: 0.25em
        background: infoBackground
        border: solidBorder
        overflow: scroll

        li
            cursor: pointer
            padding: 5px
            border-bottom: 1px dashed #000
            transition: background .2s
            
            &:hover
                background: darken(infoBackground, 20%)
            

        span
            display: block

        .name
            display: block
            text-align: right;

    .pokemon-info
        background: infoBackground
        border: solidBorder
        margin-top: 1em
        height: 50vh
        
        table
            width: 100%

@keyframes pulse {
    0%      { opacity: 0 }
    50%     { opacity: 1 }
    100%    { opacity: 0 }
}